{
    "manifest_version": 2,
    "name": "PHP Rebirth",
    "version": "1.0",
    "web_accessible_resources": [
        "images/*"
    ],
    "description": "Browser extention for php.net site",
    "icons": {
        "48": "images/icon-48.png"
    },
    "browser_action": {
		"default_icon": "images/icon-48.png",
		"default_title": "PHP Rebirth"
    },
    "content_scripts": [
        {
            "matches": ["*://www.php.net/*", "*://php.net/*"],
            "css": ["main.css"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://www.php.net/*", "*://php.net/*"],
            "js": ["main.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "notifications",
        "activeTab"
    ]
}
